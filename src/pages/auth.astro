---
import LayoutAuth from "../layouts/LayoutAuth.astro";
import axios from "axios";

const title = "About";

const todo = async () => {
  const response = await axios.get(
    "https://jsonplaceholder.typicode.com/todos/1"
  );
  return response.data;
};

todo();
---

<LayoutAuth title={title}>
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-bold text-center text-white">About</h1>
    <div class="flex flex-col items-center justify-center">
      {
        todo().then((data) => {
          return (
            <div class="bg-white p-4 rounded-lg shadow-lg mt-4">
              <h2 class="text-2xl font-bold text-center text-gray-800">Todo</h2>
              <p class="text-lg text-center text-gray-800">{data.title}</p>
            </div>
          );
        })
      }
    </div>
  </main>
</LayoutAuth>
